@page
@model Lakehouse.Pages.Admin.ReservationEditModel
@{
    ViewData["Title"] = "ReservationEdit";
    Layout = "~/Pages/layouts/_AdminLayout.cshtml";
}

<style>
    table {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    td {
        padding: 10px;
        text-align: center;
    }

    th {
        text-align: center;
        padding-left: 10px;
        padding-right: 10px;
    }

    h4 {
        padding-top: 20px;
    }

    .user-text {
        font-size: 14px;
    }

    .buttonsBlock {
        display: flex;
    }

    .left-spacing {
        margin-left: 5px;
    }

    .message-text {
        color: blue;
    }
</style>



<h4>View Reservation</h4>

@if (Model.Message != null)
{

    <p class="message-text">@Model.Message</p>
}

@if (Model.Reservation != null)
{
    <form method="POST">

        <input asp-for="Reservation.UserId" value="@Model.Reservation.UserId" type="hidden"/>
        <input asp-for="Reservation.ReservationId" value="@Model.Reservation.ReservationId" type="hidden"/>

        <table>
            <tr>
                <th>Guest Name</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>

            <tr>
                <td>
                    @Model.Reservation.User.Name
                </td>
                <td>
                    <input asp-for="Reservation.StartDate" class="form-control" />

                </td>
                <td>
                    <input asp-for="Reservation.EndDate" class="form-control" />

                </td>
            </tr>
        </table>

        <input type="submit" value="Update Reservation" class="btn btn-success" />
        <br>
    </form>
        }
        <br>
        <a href="/Admin/AdminDashboard">Back to Dashboard</a>
