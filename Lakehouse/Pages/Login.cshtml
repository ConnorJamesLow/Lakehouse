@page
@model Lakehouse.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">

    <div class="row">
        <div class="col">
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Login</h4>
                    <hr />
                    <span>@Model.Message</span>
                    <span asp-validation-for="User"></span>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label col-md-2"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label col-md-2"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex">
                        <input type="submit" value="Login" class="btn btn-primary px-5" />
                        <span class="ml-auto">
                            <a asp-page="/Register" class="btn btn-outline-secondary">Not registered yet?</a>
                        </span>
                    </div>
                    <div class="form-group">

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
